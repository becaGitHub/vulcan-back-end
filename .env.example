# General
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_db_password_here
DB_NAME=database_vulcan
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Auth / JWT
JWT_SECRET=replace_with_a_strong_secret
JWT_EXPIRES_IN=3600s

# Optional services
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Frontend / CORS
# Comma-separated origins. Example: http://localhost:4000,https://app.example.com
FRONTEND_ORIGIN=http://localhost:4000
# Set to 'false' to disable credentials support
CORS_CREDENTIALS=true
